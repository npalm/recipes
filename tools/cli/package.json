{
  "name": "@recipes/cli",
  "version": "0.1.0",
  "description": "CLI tool for creating and importing recipes using AI",
  "type": "module",
  "bin": {
    "recipe": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.3",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "node-fetch": "^3.3.2",
    "ora": "^9.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}
